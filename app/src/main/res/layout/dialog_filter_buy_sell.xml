<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corner_dialog"
    android:orientation="vertical">
    <EditText
        android:id="@+id/bc_et_business_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/rounded_corner_layout"
        android:cursorVisible="true"
        android:hint="Product Name"
        android:paddingLeft="@dimen/_5sdp"
        android:textColor="@color/black" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_8sdp"
        android:background="@drawable/rounded_corner_layout"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/sp_bs_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" />
    </LinearLayout>
    <EditText
        android:id="@+id/bc_et_business_city"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/rounded_corner_layout"
        android:cursorVisible="true"
        android:hint="City"
        android:paddingLeft="@dimen/_5sdp"
        android:textColor="@color/black" />
    <com.kelybro.android.customviews.CustomTextView
        android:id="@+id/btnFilterBuySell"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/rounded_layout_sky"
        android:gravity="center"
        android:text="Apply Filter"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_12sdp" />
</LinearLayout>